{% extends 'base.html.twig' %}

{% block title %} Creation d'un article {% endblock %}

{% block body %}

    <div class="container">
        <h1 class="text-center my-5">Créer un article</h1>

            {{ form_start(form_article)}}
                <div class="row">
                    <div class="col">
                        <div class="alert alert-light">
                            <h2>
                                <i class="fas fa-info-circle"></i>
                                Informations générales
                            </h2>
                            <hr>
                                {{ form_row(form_article.title)}}
                                {{ form_row(form_article.slug)}}
                                {{ form_row(form_article.introduction)}}
                        </div>
                    </div>

                    <div class="col">
                        <div class="alert alert-light">
                            <h2>Détails de l'article</h2>
                            <hr>
                                {{ form_row(form_article.content)}}
                                {{ form_row(form_article.coverImage)}}
                        </div>
                    </div>
                </div>
                
                <div class="alert alert-success clearfix">
                    <h2 class="alert-heading">Sauvegarder un article</h2>
                    <p>Vous êtes sur le point de créer un article</p>
                    <button type="submit" class="btn btn-primary float-right">
                        <i class="fas fa-check"></i>
                        Créer un nouveau article
                    </button>
                </div>
            {{ form_end(form_article)}}
        
    </div>


{% endblock %}