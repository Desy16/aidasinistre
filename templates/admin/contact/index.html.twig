{% extends 'admin/base.html.twig' %}

{% block title %} Administration des contacts {% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5 text-center">Administration des contacts </h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                {# <th>Nom de l'association</th> #}
                <th>Nom(s)</th>
                <th>Prenom(s)</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th>Message</th>
                <th>Qualification</th>
                <th>Sinistre</th>
                <th>Actions</th>
            </tr>
        </thead>

{# {{ path('admin_association_edit', {'id': association.id}) }}
{{ path('admin_association_delete', {'id': association.id}) }} #}
        
        <tbody>
            {% for contact in paginator.data %}
                <tr>
                    <td>{{ contact.id }}</td>
                   {#  <td>{{ contact.association.name}}</td> #}
                    <td>{{ contact.lastName }}</td>
                    <td>{{ contact.firstName }}</td>
                    <td>{{ contact.phone }}</td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.message }}</td>
                    <td>{{ contact.qualification }}</td>
                    <td>{{ contact.sinister }}</td>
                    <td>
                        <a href="{{ path('admin_contact_delete',  {'id': contact.id}) }}" class="btn btn-danger" onClick="return confirm(`Etes vous sur de vouloir supprimer le contact : {{ contact.lastName }}`)"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% include 'admin/partiels/_pagination.html.twig' with {'route': 'admin_contacts_index'} %}
</div>
    
{% endblock %}
