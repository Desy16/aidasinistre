{% extends 'admin/base.html.twig' %}

{% block title %} Administration des articles {% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5 text-center">Gestion des articles </h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Adresse</th>
                <th>Introduction</th>
                <th>Contenu</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.slug }}</td>
                    <td>{{ article.introduction }}</td>
                    <td>{{ article.content }}</td>
                    <td>{{ article.coverImage }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
    
{% endblock %}
