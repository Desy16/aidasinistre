{% extends 'admin/base.html.twig' %}

{% block title %} Administration des articles {% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5 text-center">Administration des articles </h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                {# <th>Auteur</th> #}
                <th>Titre</th>
                <th>Adresse</th>
                <th>Introduction</th>
                <th>Contenu</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for article in paginator.data %}
                <tr>
                    <td>{{ article.id }}</td>
                    {# <td>{{ article.author.user }}</td> #}
                    <td>{{ article.title }}</td>
                    <td>{{ article.slug }}</td>
                    <td>{{ article.introduction }}</td>
                    <td>{{ article.content }}</td>
                    <td>{{ article.coverImage }}</td>
                    <td>
                        <a href="{{ path('admin_articles_create') }}" class="btn btn-primary"><i class="fas fa-plus-circle"></i></a>
                        <a href="{{ path('admin_articles_edit', {'id': article.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin_articles_delete', {'id': article.id}) }}" class="btn btn-danger" onClick="return confirm(`Etes vous sur de vouloir supprimer l'article : {{ article.title }}`)"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% include 'admin/partiels/_pagination.html.twig' with {'route': 'admin_articles_index'} %}
    {# {{ paginator.display() }} #}
</div>
    
{% endblock %}
